<div class="slider-container">
    <div class="slider">
        <div class="slide"><img src="images/banner1.jpg" alt="Banner 1"></div>
        <div class="slide"><img src="images/banner2.jpg" alt="Banner 2"></div>
        <div class="slide"><img src="images/banner3.jpg" alt="Banner 3"></div>
    </div>

    <div class="dots-container">
        <span class="dot active" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
    </div>

    <button class="arrow prev" onclick="plusSlides(-1)">&#10094;</button>
    <button class="arrow next" onclick="plusSlides(1)">&#10095;</button>
</div>



  <!-- Navigation Arrows -->
  <button class="prev" onclick="prevSlide()">&#10094;</button>
  <button class="next" onclick="nextSlide()">&#10095;</button>
</section>





